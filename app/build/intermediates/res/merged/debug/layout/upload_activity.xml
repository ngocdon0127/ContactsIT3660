<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <EditText
        android:id="@+id/txtFileName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txtFileName"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <Button
        android:id="@+id/btnUploadToDropbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnUploadToDropbox"
        android:layout_below="@+id/txtFileName"
        />

    <Button
        android:id="@+id/btnUploadToGoogleDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnUploadToGoogleDrive"
        android:layout_below="@+id/txtFileName"
        android:layout_toRightOf="@+id/btnUploadToDropbox"
        />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUploadToDropbox"
        android:hint="heheh"
        android:textSize="20dp"
        />

</RelativeLayout><!-- From: file:/E:/Android/Demo%20programming/ContactsIT3660/app/src/main/res/layout/upload_activity.xml -->